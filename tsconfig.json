{
  "compilerOptions": {
    "target": "ES2017",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/typings",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "strict": true
  },
  "exclude": [
    "./__tests__",
    "./dist/typings",
    "**/__mocks__/**",
    "./playground"
  ]
}
